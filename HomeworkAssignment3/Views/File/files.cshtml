@model IEnumerable<HomeworkAssignment3.Models.FileModel>

@{
    ViewBag.Title = "Files";
}

<h2 style="padding: 12px 0px 18px 0px">@ViewBag.Title</h2>
<h4>All the files that are in the folder are displayed</h4>

<table class="table table-hover" style="padding-top: 24px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            Download File:
        </th>
        <th>
            Delete File:
        </th>
    </tr>

    @foreach (var fil in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => fil.FileName)
            </td>
            <td>
                <div class="btn btn-success">@Html.ActionLink("Download", "DownloadFile", new { fileName = fil.FileName })</div>
            </td>
            <td>
                <div class="btn btn-danger">@Html.ActionLink("Delete", "DeleteFile", new { fileName = fil.FileName })</div>
            </td>
        </tr>
    }

</table>
