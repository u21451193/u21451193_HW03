<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-md bg-dark navbar-dark">
        <!-- Brand -->
        @Html.ActionLink("HOME", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item text-danger" style="padding-left: 10px; padding-right:10px">
                    @Html.ActionLink("Files", "files", "File")
                </li>
                <li class="nav-item" style="padding-left: 10px; padding-right:10px">
                    @Html.ActionLink("Images", "image", "Image")
                <li class="nav-item" style="padding-left: 10px; padding-right:10px">
                    @Html.ActionLink("Videos", "video", "Video")
                </li>
                <li class="nav-item" style="padding-left: 10px; padding-right:10px">
                    @Html.ActionLink("About me", "AboutMe", "Home")
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>